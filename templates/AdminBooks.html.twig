{% extends 'BaseAdmin.html.twig' %}

{% block content %}
    <div class="container">
        {% for book in books %}


            <div class="block">
                <p>Titre : {{ book.title }}</p>
                <p>Genre : {{ book.genre }}</p>
                <p>Nombres de pages : {{ book.NbPages }}</p>
                <a href="{{ path('AdminBooksDelete', {'id' : book.id}) }}"> Supprimer ce livre </a>
            </div>


        {% endfor %}
    </div>
{% endblock content %}