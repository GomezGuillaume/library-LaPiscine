{% extends "base/BaseHome.html.twig" %}


{% block home %}
    <div class="book-book">
    {% for book in books %}
        <div class="book-home">
            <p>Titre : {{ book.title }}</p>
            <p>Genre : {{ book.genre.name }}</p>
            <p>Nombres de pages : {{ book.NbPages }}</p>
            <a href="{{ path('book', {'id' : book.id}) }}"> Voir ce livre </a>
        </div>

    {% endfor %}
    </div>

    <div class="author-author">
    {% for author in authors %}
        <div class="author-home">
            <p>Nom : {{ author.firstname }}</p>
            <p>Pr√©nom : {{ author.lastname }}</p>
            <p>{{ author.birthdate | date("d/m/Y") }}</p>
            <p class="text">Biographie : {{ author.biography }}</p>
            <a href="{{ path('author2', {'id' : author.id}) }}"> Voir cet autheur </a>
        </div>

    {% endfor %}
    </div>
{% endblock home %}